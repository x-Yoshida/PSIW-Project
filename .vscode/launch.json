    "version": "0.2.0",
    "configurations": [
        {
            "name": "Lunch debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/debug/main/main.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/bin/debug/main/", //"${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "C:/mingw64/bin/gdb.exe",
            "setupCommands": [
                {
                    "description": "Włącz formatowanie kodu dla gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "compile debug"
        }
    ]
}